<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
	
<hibernate-mapping package="cn.blog.model.usergroup">
	<class name="UserGroup">
		<id name="groupId" length="10">
			<generator class="native"/>
		</id>
		<property name="groupName" length="45"/>
		<property name="groupInfo" length="45"/>
		<property name="manageArticle" type="boolean"/>
		<property name="manageComment" type="boolean"/>
		<property name="manageGroup" type="boolean"/>
		<property name="manageUser" type="boolean"/>
		<property name="sysDate"/>
		

	</class>
	
</hibernate-mapping>